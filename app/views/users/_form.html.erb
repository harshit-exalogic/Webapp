  </div>

  <div class="field">
    <%= form.label :secondary_skill_1 %>
    <%= form.text_field :secondary_skill_1 %>
  </div>

  <div class="field">
    <%= form.label :secondary_skill_2 %>
    <%= form.text_field :secondary_skill_2 %>
  </div>

  <div class="field">
    <%= form.label :notice_period_in_days %>
    <%= form.number_field :notice_period_in_days %>
  </div>


  <div class="field">
    <%= form.label :role %>
    <%= form.select :role,['Admin','Emplpyee'] %>
  </div>



  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <%= link_to 'Home', root_path %>
<% end %>






</body>
</html>


